html(ng-app="app")
	head
		include /_includes/_header
	body(ng-controller="appcontroller")
		include /_includes/_navigation
		

		section.pt-6
			.container
				.row
					.col-md-3
						.row
							.col-md-12
								h5 Cottage Search

								label Location
								select(ng-model="resultsOrder" ng-options="x.county for x in properties" name='location')


					.col-md-9
						.row
							.col-md-12
								h3 Your Results {{ properties.length }} properties found
						.row.py-4
							.col-md-12
								select(ng-model="resultsOrder")
									option(value="town") Town
									option(value="county") County
									option(value="id") Id
									option(value="cost") Cost


						.row.py-2(ng-repeat="home in properties | orderBy : resultsOrder")
							.col-md-5
								img.mw-100(ng-src="{{ home.image }}" alt="Home Image")

							.col-md-4
								h5 {{ home.name }}
								h5 {{ home.town }}, {{ home.county }}

								p Sleeps {{ home.sleeps }} | Bedrooms {{ home.bedrooms }}
							.col-md-3
								h3 From Â£{{ home.cost }}

		include /_includes/_footer