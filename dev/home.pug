.banner
.banner-search
	.container
		.row
			.col-md-3
				select(ng-model="curFilters.location" ng-options="x.county as x.county for x in properties | unique: 'county'")
			.col-md-3
				datepicker(date-format="d/M/y")
					input(ng-model="curFilters.date" type="text" placeholder="Select a date")
			.col-md-3
				select(ng-model="curFilters.nights" ng-options="o as o for o in nightList | unique: 'county'")
			.col-md-3
				a.btn.btn--seconday.w-100(ng-click="gotoResults('results')") Search

div(ng-repeat="home in properties | filter:{id: selectedProperty}")
	h1 {{ home.town }}