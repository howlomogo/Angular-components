.banner
	.banner--text
		h1 The Best UK Cottages Avaliable For Holiday Rentals

.banner--search
	.container.container-small
		.row.no-gutters.mb-2
			.col-sm-3

				.select
					select.banner--input.banner--select(ng-model="curFilters.location" ng-options="x.county as x.county for x in properties | unique: 'county'")
					.select_arrow

			.col-sm-3
				.input-group.banner--input(moment-picker="$root.curFilters.dates.dateStart" format="YYYY-MM-DD" min-date="$root.curFilters.dates.dateToday" max-date="$root.curFilters.dates.dateEnd" start-view="month" today="true" change="$root.pickerChange()")
					input.banner--date.form-control(placeholder="Select a date" ng-model="$root.curFilters.dates.dateStart" ng-model-options="{ updateOn: 'blur' }")


			.col-sm-3
				.input-group.banner--input(moment-picker="$root.curFilters.dates.dateEnd" format="YYYY-MM-DD" start-view="month" min-date="$root.curFilters.dates.dateStart" change="$root.pickerChange()")
					input.banner--date.form-control(placeholder="Select a date" ng-model="$root.curFilters.dates.dateEnd" ng-model-options="{ updateOn: 'blur' }")

			.col-sm-3
				button.banner--search-btn.btn.w-100(ng-click="gotoResults('results')") Search
		.row.text-center
			.col-md-12
				p Fill out the form above to view our avaliable holiday cottages

